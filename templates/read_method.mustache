<h1>{{resource_type_capitalized}} {{resource_name}}</h1>

{{#no_content}}
  <p>This {{resource_type}} does not have any documentation yet.</p>

  <a href="{{url_edit}}">Create {{resource_type}}</a>
{{/no_content}}


{{#has_content}}

  {{> read_synopsis }}

  {{#has_aliases}}
    <h2>Aliases</h2>
    <ul>
      {{#aliases}}
        <li>{{alias_name}}</li>
      {{/aliases}}
    </ul>
  {{/has_aliases}}

  {{#has_base}}
    <h2>Base method</h2>
    {{base}}
  {{/has_base}}

  {{> read_method_args }}
  {{> read_details }}

  <a href="{{url_edit}}">Edit {{resource_type}}</a>

{{/has_content}}
