<h1>{{resource_type_capitalized}} {{resource_name}}</h1>

{{#no_content}}
  <p>This {{resource_type}} does not have any documentation yet.</p>

  <a href="{{url_edit}}">Create {{resource_type}}</a>
{{/no_content}}


{{#has_content}}

  {{#has_synopsis}}
    <h2>Synopsis</h2>
    {{{synopsis}}}
  {{/has_synopsis}}


  {{#has_aliases}}
    <h2>Aliases</h2>
    <ul>
      {{#aliases}}
        <li>{{alias_name}}</li>
      {{/aliases}}
    </ul>
  {{/has_aliases}}


  {{#has_base}}
    <h2>Base method</h2>
    {{base}}
  {{/has_base}}


  {{#has_args}}
    <h2>Args</h2>
    <ol>
      {{#args}}
        <li>
          <h3>{{arg_name}}
            {{#arg_has_default}}
              = {{arg_default}}
            {{/arg_has_default}}
          </h3>
          {{#arg_has_info}}
            {{{arg_info}}}
          {{/arg_has_info}}
          {{#arg_has_type}}
            <p>Type: {{arg_type}}</p>
          {{/arg_has_type}}
        </li>
      {{/args}}
    </ol>
  {{/has_args}}


  {{#has_details}}
    <h2>Details</h2>
    {{{details}}}
  {{/has_details}}


  <a href="{{url_edit}}">Edit {{resource_type}}</a>

{{/has_content}}
